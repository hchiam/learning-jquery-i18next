{
  "name": "learning-template",
  "license": "MIT",
  "scripts": {
    "lint": "prettier --write *.{js,css,html,scss,json,md,ts,tsx}"
  },
  "dependencies": {},
  "devDependencies": {
    "husky": "^4.3.0",
    "lint-staged": "^12.1.3",
    "prettier": "^2.4.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "jest --bail --findRelatedTests",
      "es-check es5 './**/*.js' --not=node_modules"
    ],
    "*.{js,css,html,scss,json,md,ts,tsx}": "prettier --write"
  }
}
